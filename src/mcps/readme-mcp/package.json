{
  "name": "@pubsub-mcp/readme-mcp",
  "version": "1.0.0",
  "description": "MCP server for enforcing README standards.",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "dev:dapr": "dapr run --app-id readme-mcp --app-port 3005 --dapr-http-port 3502 --dapr-grpc-port 50002 --placement-host-address localhost:50006 --scheduler-host-address localhost:50007 --components-path ../dapr/components.mcp -- npm run dev",
    "start": "node dist/index.js",
    "init-stream": "node init-stream.cjs",
    "init-stream:k8s": "dotenv -e .env.k8s -- node init-stream.cjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "dapr:run": "bash dapr-run.sh",
    "clean": "rm -rf dist node_modules",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "readme",
    "standards",
    "dapr",
    "effect-ts"
  ],
  "author": "Simon Stipcich",
  "license": "MIT",
  "dependencies": {
    "@dapr/dapr": "^3.6.1",
    "@effect/platform": "^0.92.1",
    "@effect/platform-node": "^0.98.3",
    "@effect/schema": "^0.75.5",
    "@modelcontextprotocol/sdk": "^1.19.1",
    "effect": "^3.18.4",
    "express": "^5.1.0",
    "uuid": "^13.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@effect/vitest": "^0.26.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^10.0.0",
    "nats": "^2.29.3",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
